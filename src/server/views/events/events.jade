extends ../layout

block content
	div.contextHead
		div.leftSide
			a.btn.lg(href="/events/new") Create Event
		div.rightSide
			div.filterControl
				a(href="#") Show Filter Controls
			div.viewSelect
				div.listView List View
				div.gridView Grid View
	div.listView.events
		table.standard
			thead
				tr
					th Date
					th Title
					th Game
					th User
					th Status
					th 
					th 	
			tbody
				tr
					td.date 10/15/15
					td.title The International 7
					td.game.csgo DOTA 2
					td.user clam-
					td.status.draft Draft
					td.edit
						a(href="#")
					td.url
						a(href="#")
				tr
					td.date 10/5/15
					td.title ESL One Cologne 2015 North American Qualifier
					td.game.csgo CSGO
					td.user mattc0m
					td.status.published Published
					td.edit 
						a(href="#")
					td.url 
						a(href="#")

	.section(ng-app="event", ng-controller="eventList as events", ng-cloak)
		div.row-list(ng-repeat="event in events.eventData")
			div.item
				div.imageContain
					img.eventImage(src="/assets/images/event-image-sm.jpg")
					div.overlay
				div.eventDate {{event.eventStartDate | date : "dd MMM"}}
				-
				div.eventDate {{event.eventEndDate | date : "dd MMM"}}
				div.eventGame {{event.game}}
				div.eventTitle {{event.eventTitle | limitTo: 75}}
				div.eventStatus {{event.status}}
				
block scripts
	script(src='/assets/js/app/services/event.js')
	script(src='/assets/js/app/controllers/event.js')