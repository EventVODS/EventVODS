extends layout

block content
	.appcontainer(ng-app="overview", ng-controller="eventList as events")
		h1.title Overview
		//Recent events
		.section
			h2.title Recent Events
			a.btn(href="/events") View Events
			//Also needs filter: recent
			div.row-list(ng-repeat="event in events.eventData | limitTo: 3")
				div.item
					div.imageContain
						img.eventImage(src="/assets/images/event-image-sm.jpg")
						div.overlay
					div.eventDate {{event.date}}
					div.eventGame {{event.game}}
					div.eventTitle {{event.title}}
					div.eventStatus {{event.status}}
		//Upcoming events
		.section.events.upcoming
			h2.title Upcoming Events
			a.btn(href="/events") View Events
			//Also needs filter: upcoming
			div.row-list(ng-repeat="event in events.eventData | limitTo: 3")
				div.item
					div.imageContain
						img.eventImage(src="/assets/images/event-image-sm.jpg")
						div.overlay
					div.eventDate {{event.date}}
					div.eventGame {{event.game}}
					div.eventTitle {{event.title}}
					div.eventStatus {{event.status}}
		//Data mgr
		.section
			h2.title Data Manager
		//User mgr
		.section
			h2.title User Manager

block scripts
	script(src='/assets/js/app/services/event.js')
	script(src='/assets/js/app/controllers/event.js')