extends layout

block content
	.appcontainer(ng-app="overview")
		h1.title Overview
		//Recent events
		.section(ng-controller="eventList as events")
			h2.title Recent Events
			a.button.float-right(href="/events") View Events
			table
				thead
					tr
						th(ng-repeat="title in events.fields") {{title}}
				tbody
					tr(ng-repeat="event in events.eventData")
						td(ng-repeat="field in event") {{field}}
		//Upcoming events
		.section.events.upcoming
			h2.title Upcoming Events
			a.btn(href="/events") View Events

			div.row-list
				div.item
					div.imageContain
						img.eventImage(src="/assets/images/event-image-sm.jpg")
						div.overlay
					div.eventDate Dec 10
					div.eventGame CSGO
					div.eventTitle Fragbite Masters - Season 4
					div.eventStatus Published
				div.item
					div.imageContain
						img.eventImage(src="/assets/images/event-image-sm.jpg")
						div.overlay
					div.eventDate Dec 15
					div.eventGame CSGO
					div.eventTitle Intel Extreme Masters
					div.eventStatus Draft

		//Data mgr
		.section
			h2.title Data Manager
		//User mgr
		.section
			h2.title User Manager

block scripts
	script(src='/assets/js/app/services/event.js')
	script(src='/assets/js/app/controllers/event.js')