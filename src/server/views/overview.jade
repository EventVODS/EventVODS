extends layout

block content
	.appcontainer(ng-app="overview", ng-controller="overviewDisplay as overview")
		h1.title Overview
		//Recent events
		.section(ng-cloak)
			h2.title Recent Events
			a.btn(href="/events") View Events
			div.row-list(ng-repeat="event in overview.upcoming")
				div.item
					div.imageContain
						img.eventImage(src="/assets/images/event-image-sm.jpg")
						div.overlay
					div.eventDate {{event.date}}
					div.eventGame {{event.game}}
					div.eventTitle {{event.title}}
					div.eventStatus {{event.status}}
		//Ongoing events
		.section(ng-cloak)
			h2.title Ongoing Events
			a.btn(href="/events") View Events
			div.row-list(ng-repeat="event in overview.ongoing")
				div.item
					div.imageContain
						img.eventImage(src="/assets/images/event-image-sm.jpg")
						div.overlay
					div.eventDate {{event.date}}
					div.eventGame {{event.game}}
					div.eventTitle {{event.title}}
					div.eventStatus {{event.status}}
		//Upcoming events
		.section(ng-cloak)
			h2.title Upcoming Events
			a.btn(href="/events") View Events
			//Also needs filter: upcoming
			div.row-list(ng-repeat="event in overview.upcoming")
				div.item
					div.imageContain
						img.eventImage(src="/assets/images/event-image-sm.jpg")
						div.overlay
					div.eventDate {{event.date}}
					div.eventGame {{event.game}}
					div.eventTitle {{event.title}}
					div.eventStatus {{event.status}}
		//Data mgr
		.section(ng-cloak)
			h2.title Data Manager
		//User mgr
		.section(ng-cloak)
			h2.title User Manager

block scripts
	script(src='/assets/js/app/controllers/overview.js')
