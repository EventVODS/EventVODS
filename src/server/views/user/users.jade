extends ../layout
block vars
    -currentPage = "Users";
block content
    div.content(ng-app="user", ng-controller="userList", ng-cloak)
        h1 User Configuration
        div.listview
            table.standard
                thead
                    tr
                        th.sortable Username
                        th User Rights
                tbody
                    tr(ng-repeat="user in userData")
                        td {{user.username}}
                        td {{user.userRights}}
block scripts
    script(src='/assets/js/app/services/user.js')
    script(src='/assets/js/app/controllers/user.js')